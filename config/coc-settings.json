{
	"languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  },
  "git.addGBlameToBufferVar": true,
  "git.branchCharacter": "",
  "texlab.build.onSave": true,
  "texlab.build.executable": "latexmk",
  "texlab.build.args": ["%f"],
  "texlab.forwardSearch.executable": "zathura",
  "texlab.forwardSearch.args": [
  	"--synctex-forward", "%l:0:%f", 
  	"-x", "nvr -c 'tab drop %f | %{line}'",
  	"%p"
  ],
  "texlab.latexindent.modifyLineBreaks": true,
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.inlayHints.enable": true,
  "Lua.workspace.library": {
    "~/sm_modding/lua_compat/": true,
    "~/sm_modding/game_data/Survival/": true,
    "~/sm_modding/game_data/Data/": true
  },
  "Lua.diagnostics.globals": ["sm", "bit"],
  "Lua.diagnostics.disable": ["lowercase-global"]
}
